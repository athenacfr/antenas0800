---
import { SITE_TITLE } from '@/consts';
import { isPathnameEqual } from '@/utils/url';
---

<header>
  <nav class="flex gap-4 px-4 py-6">
    <a
      href="/"
      data-underline
      data-active={isPathnameEqual(Astro.url.href, '/')}
      class="data-[active=true]:underline">{SITE_TITLE}</a
    >
    <a
      href="/grafia"
      data-underline
      data-active={isPathnameEqual(Astro.url.href, '/grafia')}
      class="data-[active=true]:underline">grafia</a
    >
  </nav>
</header>
